{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/cjs",
    "skipLibCheck": true
  },
  "include": ["src", "src/**/*.crt"],
  "exclude": ["node_modules"]
}
