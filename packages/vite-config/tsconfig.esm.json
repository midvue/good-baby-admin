{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "skipLibCheck": true
  },
  "include": ["src", "src/**/*.crt"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
